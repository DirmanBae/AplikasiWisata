<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B1AEAE"
    android:orientation="vertical"
    tools:context=".bayar">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="400dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:background="@drawable/bg_total"
            android:padding="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pembayaran Sukses"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#23F21F"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bank"
                    android:textSize="18dp"
                    android:textColor="#616060"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BNI"
                    android:textSize="18dp"
                    android:gravity="end"
                    android:textColor="#616060"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bayar"
                    android:textSize="18dp"
                    android:textColor="#616060"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/inBayar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="19.000"
                    android:textSize="18dp"
                    android:gravity="end"
                    android:textColor="#616060"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin"
                    android:textSize="18dp"
                    android:textColor="#616060"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2.000"
                    android:textSize="18dp"
                    android:gravity="end"
                    android:textColor="#616060"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Pembayaran"
                    android:textSize="18dp"
                    android:textColor="#616060"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/Tanggal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18dp"
                    android:gravity="end"
                    android:textColor="#616060"
                    android:textStyle="bold"/>
            </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Pembayaran"
                    android:layout_marginTop="50dp"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
            <TextView
                android:id="@+id/inTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21.000"
                android:textSize="22sp"
                android:textColor="#23F11F"
                android:textStyle="bold"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBayar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lihat Peta"
            android:textSize="25sp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="50dp"
            android:textColor="#FFFFFF"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_btn"
            android:gravity="center">

        </androidx.appcompat.widget.AppCompatButton>
    </RelativeLayout>


    
</LinearLayout>