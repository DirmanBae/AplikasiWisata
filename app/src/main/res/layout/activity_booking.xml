<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".booking">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:textStyle="bold"
            android:background="#C5C0C0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Your Reservoir"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp">
        <ImageView
            android:id="@+id/imgBooking"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:src="@drawable/mount"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wisata Lamping Kidang \nHarga untuk 1 tiket"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp.20.000"
                android:textStyle="bold"
                android:textSize="30dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/btnMinus"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/minus"
                    android:contentDescription="minusbtn"
                    android:background="@android:color/transparent"/>
                <TextView
                    android:id="@+id/tiket"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="0"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:enabled="false"
                    android:textColorHint="#000000"
                    android:background="@drawable/bg_search"/>
                <ImageButton
                    android:id="@+id/btnTambah"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/plus"
                    android:contentDescription="plusbtn"
                    android:background="@android:color/transparent"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kode Promo"
        android:textSize="25sp"
        android:padding="15dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="#000"
        android:background="@drawable/bg_red"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Total"
            android:textSize="18dp"
            android:textColor="#616060"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/inJumlah"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:gravity="end"
            android:textSize="16sp"
            android:textStyle="bold"
            android:enabled="false"
            android:textColor="#616060"
            android:text="0"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diskon"
            android:textSize="18dp"
            android:textColor="#616060"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:gravity="end"
            android:textSize="16sp"
            android:textColor="#616060"
            android:textStyle="bold"
            android:enabled="false"
            android:text="20%"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setelah di diskon"
            android:textSize="18dp"
            android:textColor="#616060"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/diskon"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:gravity="end"
            android:textColor="#616060"
            android:textStyle="bold"
            android:enabled="false"
            android:textSize="16sp"
            android:text="0"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:textSize="18dp"
            android:textColor="#616060"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/biayaAdmin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:gravity="end"
            android:textColor="#616060"
            android:textStyle="bold"
            android:enabled="false"
            android:text="2.000"/>
    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textSize="18dp"
            android:textColor="#000"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"/>
    <TextView
        android:id="@+id/total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="25sp"
        android:padding="15dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="#000"
        android:background="@drawable/bg_btn"
        android:gravity="center"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBayar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bayar Sekarang"
        android:textSize="25sp"
        android:padding="15dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="#000"
        android:background="@drawable/bg_btn"
        android:gravity="center">

    </androidx.appcompat.widget.AppCompatButton>

</LinearLayout>